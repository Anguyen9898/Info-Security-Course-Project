<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetDialogTheme">@drawable/circle_background</item>
        <item name="android:layout_marginLeft">@dimen/dp3</item>
        <item name="android:layout_marginRight">@dimen/dp3</item>
        <item name="android:layout_marginBottom">@dimen/dp1</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
